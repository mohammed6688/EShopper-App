<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColorHint="@color/black"
            android:layout_margin="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo"
            android:text="@string/sign_in"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/vector_image" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:hint="@string/email"
            android:autofillHints="@string/email" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:fontFamily="@font/cairo"
            android:textColor="@color/black"
            android:autofillHints="@string/password" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="21dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="?android:selectableItemBackground"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/forgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/cairo"
                    android:textColor="@color/black"
                    android:text="@string/forget_password"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.github.jorgecastilloprz.FABProgressCircle
                android:id="@+id/fabProgressCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:arcColor="#00ffff"
                app:arcWidth="5dp"
                android:layout_gravity="center_horizontal"
                app:finalIcon="@drawable/ic_baseline_check_24">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/sign_in"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/white" />

            </com.github.jorgecastilloprz.FABProgressCircle>
            <com.github.jorgecastilloprz.FABProgressCircle
                android:id="@+id/googleProgressCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:arcColor="#00ffff"
                app:arcWidth="5dp"
                android:layout_gravity="center_horizontal"
                app:finalIcon="@drawable/ic_baseline_check_24">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/googleLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:background="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/guest"
                    android:src="@drawable/google"
                    app:tint="@color/white" />
            </com.github.jorgecastilloprz.FABProgressCircle>
            <com.github.jorgecastilloprz.FABProgressCircle
                android:id="@+id/facebookProgressCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:arcColor="#00ffff"
                app:arcWidth="5dp"
                android:layout_gravity="center_horizontal"
                app:finalIcon="@drawable/ic_baseline_check_24">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/guest"
                    android:src="@drawable/ic_baseline_facebook_24"
                    app:tint="@color/white" />
            </com.github.jorgecastilloprz.FABProgressCircle>
            <com.facebook.login.widget.LoginButton
                android:visibility="gone"
                android:id="@+id/button_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>